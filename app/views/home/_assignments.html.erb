<div class='card-tier'>
  <div class='card'>
    <div class='card-header'>
      <h2>Pending Assignments</h2>
    </div>
  </div>
</div>
<div class='card-tier'>
  <% @assignments[0..5].each do |assignment| %>
        <div class="card" onClick="() => {window.location.href = '/course_assignments/<%= assignment.id %>'}">
          <div class='card-header' >
            <h3>Assignment:   <%= assignment.assignment.name %></h3>
            <small>Course:   <%= assignment.course.name %></small>
          </div>
          <div class='card-content'>
            <h3><%= link_to assignment.assignment.name, assignment_path(assignment) %></h3>
            <h3>
                <% if assignment.due_date > Time.now %>
                    <p>Due in <%= assignment.due_date.strftime('%H:%M %a, %d %b %Y') %> </p>
                <% else %>
                    <p>Due <%= assignment.due_date.strftime('%H:%M %a, %d %b %Y') %> ago</p>
                <% end %>
            </h3>
          </div>
        </div>
    <% end %>

  </div>
</div>