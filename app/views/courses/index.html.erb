<div class='card'>
  <div class='card-header'>
    <h3>All Courses</h3>
  </div>
  <div class='card-content'>
    <h2>Courses</h2>
    <div class="panel-container">
      <% @courses.map do |course| %>
      <div class="card-content">
        <p><%= course.name %></p>
        <div class='button'>
          <%= link_to 'View details', course_path(course) %></small>
        </div>
      </div>
      <% end %>
    </div> %>
  </div>
</div>
