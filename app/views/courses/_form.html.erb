<% if @course.errors.any? %>
  <ul>
    <% @course.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>


<%= form_for @course do |f| %>

<div>
<%= f.label :name %>
<%= f.text_field :name%>
<div>

<div>
<%= f.label :description %>
<%= f.text_field :description %>
<div>

<div>
<%= f.label :status %>
<%= f.text_field :status, id: "select-status" %>
<div>

<div>
<%= f.label :course_type %>
<%= f.text_field :course_type, id: "select-course_type" %>
<div>







<%= f.submit %>

<% end %>

<script>

$('#select-status').selectize({
  options: [
    {value: 1, name: "Active"},
    {value: 2, name: "Inactive"}
  ],
    create: true,
    sortField: 'text'
});

$('#select-course_type').selectize({
  options: [
    {value: 1, name: "Computer"},
    {value: 2, name: "Business"},
    {value: 3, name: "Art"},

  ],
    create: true,
    sortField: 'text'
});

$('#datetimepicker').datetimepicker(
  format: 'YYYY-MM-DD HH:mm'
)



</script>


