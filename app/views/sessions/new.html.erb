<article class="login">

    <h1>Sign In</h1>

    <%= form_tag(sessions_path, method: "POST") do %>
        <div>
            <%= label_tag :email %>
            <%= text_field_tag :email %>
        </div>
        <div>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
        </div>
        <%= submit_tag "Login" %>
    <% end %>

</article>
